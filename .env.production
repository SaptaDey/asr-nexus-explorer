# Production Environment Configuration
VITE_NODE_ENV=production
VITE_API_BASE_URL=https://scientific-research.online
VITE_ENABLE_DEBUG=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_MAX_GRAPH_NODES=1500
VITE_MAX_API_CALLS_PER_MINUTE=100
VITE_CACHE_TTL_MINUTES=15
VITE_LOG_LEVEL=error

# Feature flags for production
VITE_FEATURE_TREE_VISUALIZATION=true
VITE_FEATURE_ADVANCED_ANALYTICS=true
VITE_FEATURE_COLLABORATIVE_MODE=true
VITE_FEATURE_EXPORT_FUNCTIONALITY=true
VITE_FEATURE_MOBILE_PWA=true

# Production-specific settings
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_CDN=true
VITE_COMPRESS_ASSETS=true